<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:background="#000000"
    tools:context="com.vgdengineering.dashboard.MainActivity">

    <com.vgdengineering.dashboard.CircularSeekBar
        android:id="@+id/circularSeekBar1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:circle_stroke_width="10dp"
        app:start_angle="140"
        app:end_angle="40"
        app:circle_x_radius="200dp"
        app:circle_y_radius="200dp"
        app:use_custom_radii="true"
        app:max="8000"
        app:circle_progress_color="#ce8d00"
        app:pointer_alpha_ontouch="100"
        app:pointer_color="#ce8d00"
        app:pointer_halo_color="#880174DF"/>

    <com.vgdengineering.dashboard.CircularSeekBar
        android:id="@+id/circularSeekBar2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="30dp"
        app:circle_stroke_width="10dp"
        app:start_angle="140"
        app:end_angle="40"
        app:circle_x_radius="200dp"
        app:circle_y_radius="200dp"
        app:use_custom_radii="true"
        app:max="260"
        app:circle_progress_color="#ce8d00"
        app:pointer_alpha_ontouch="100"
        app:pointer_color="#ce8d00"
        app:pointer_halo_color="#880174DF"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/rpm"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:text="RPM"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="87dp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/speed"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="440dp"/>

    <TextView
        android:text="Km/h"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="447dp"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="190dp"
        android:id="@+id/rled5"
        android:background="@drawable/led2"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/rled4"
        android:background="@drawable/led2"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="230dp"
        android:id="@+id/rled3"
        android:background="@drawable/led1"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/rled2"
        android:background="@drawable/led1"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="270dp"
        android:id="@+id/rled1"
        android:background="@drawable/led1"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/car"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="290dp"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="375dp"
        android:id="@+id/dled1"
        android:background="@drawable/led1"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="395dp"
        android:id="@+id/dled2"
        android:background="@drawable/led1"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="415dp"
        android:id="@+id/dled3"
        android:background="@drawable/led1"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="435dp"
        android:id="@+id/dled4"
        android:background="@drawable/led2"/>

    <TextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="455dp"
        android:id="@+id/dled5"
        android:background="@drawable/led2"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/leftarrow"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/rightarrow"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="570dp"/>


</RelativeLayout>
